{
    "platform": {
        "apiRuntime": "node:20"
    },
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/images/*.{png,jpg,gif}",
            "/css/*",
            "/js/*",
            "/api/*",
            "/sw.js",
            "/workbox-*.js",
            "/manifest.json",
            "/icons/*"
        ]
    },
    "routes": [
        {
            "route": "/markdown-viewer",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/api/*",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        },
        {
            "route": "/sw.js",
            "headers": {
                "cache-control": "no-cache, no-store, must-revalidate",
                "Service-Worker-Allowed": "/"
            }
        },
        {
            "route": "/manifest.json",
            "headers": {
                "Content-Type": "application/manifest+json",
                "cache-control": "max-age=3600"
            }
        }
    ],
    "globalHeaders": {
        "content-security-policy": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self' https://*.azure-api.net https://*.azurewebsites.net;"
    },
    "auth": {
        "identityProviders": {
            "azureActiveDirectory": {
                "registration": {
                    "openIdIssuer": "https://login.microsoftonline.com/0f0b1d8e-c8f3-4b9b-91bd-cc7c1751899e/v2.0",
                    "clientIdSettingName": "AZURE_CLIENT_ID",
                    "clientSecretSettingName": "AZURE_CLIENT_SECRET"
                }
            }
        }
    },
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/.auth/login/aad"
        }
    }
}